<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.blogspot.achmadsyarifhidayatullah.androidkejar3.MainActivity">

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="#4d4d4d"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@id/line"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            android:layout_marginStart="95dp"
            android:textSize="80sp"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/two_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:text="@string/two_points"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:onClick="twoPointsA"/>

            <Button
                android:id="@+id/three_points"
                android:text="@string/three_points"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/two_points"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:onClick="threePointsA"/>

            <Button
                android:id="@+id/free_throw"
                android:layout_below="@id/two_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_throw"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="50dp"
                android:background="@android:color/holo_orange_light"
                android:onClick="freeThrowA"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/visitor"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/line"
        android:layout_marginStart="20dp"
        >

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visitor"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number"
            android:layout_marginStart="95dp"
            android:textSize="80sp"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/two_points2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:text="@string/two_points"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:onClick="twoPointsB"/>

            <Button
                android:id="@+id/three_points2"
                android:text="@string/three_points"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/two_points2"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:onClick="threePointsB"/>

            <Button
                android:id="@+id/free_throw2"
                android:layout_below="@id/two_points2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_throw"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="50dp"
                android:background="@android:color/holo_orange_light"
                android:onClick="freeThrowB"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resetButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="reset"/>

</RelativeLayout>