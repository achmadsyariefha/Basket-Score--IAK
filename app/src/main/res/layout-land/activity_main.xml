<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="#4d4d4d"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@id/line"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="102dp"
            android:textSize="80sp"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/two_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:text="+2 Points"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

            <Button
                android:id="@+id/three_points"
                android:text="+3 Points"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/two_points"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

            <Button
                android:id="@+id/free_throw"
                android:layout_below="@id/two_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="50dp"
                android:background="@android:color/holo_orange_light"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/visitor"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/line"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visitor"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="105dp"
            android:textSize="80sp"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/two_points2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:text="+2 Points"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

            <Button
                android:id="@+id/three_points2"
                android:text="+3 Points"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/two_points2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

            <Button
                android:id="@+id/free_throw2"
                android:layout_below="@id/two_points2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="50dp"
                android:background="@android:color/holo_orange_light"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_orange_light"/>

</RelativeLayout>